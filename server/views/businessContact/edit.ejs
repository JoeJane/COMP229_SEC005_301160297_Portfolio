<!--Import Header and Navigation bar-->
<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<!--Content for the Edit Page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6 mt-5">
            <h1><%= title %></h1>

            <!--Business Contact Form-->
            <form class="row g-3" method="POST">
                <div class="col-md-12">
                    <label for="nameTextField" class="form-label">Name</label>
                    <input type="text" class="form-control"
                           id="nameTextField"
                           placeholder="Enter the Name"
                           name="name"
                           value="<%= businessContact.name %>"
                           required>
                </div>

                <div class="col-md-12">
                    <label for="contactNumberTextField" class="form-label">Contact Number</label>
                    <input type="text" class="form-control"
                           id="contactNumberTextField"
                           placeholder="Enter the Contact Number"
                           name="contactNumber"
                           value="<%= businessContact.contactNumber %>"
                           required>
                </div>

                <div class="col-md-12">
                    <label for="emailTextField" class="form-label">Email</label>
                    <input type="email" class="form-control"
                           id="emailTextField"
                           placeholder="Enter the Email"
                           name="email"
                           value="<%= businessContact.email %>"
                           required>
                </div>


                <!--button controls-->
                <div class="col-md-12">
                    <button class="btn btn-dark" type="submit">
                        <i class="fas fa-edit"></i> Submit</button>

                    <a href="/businessContact" class="btn btn-outline-dark">
                        <i class="fas fa-undo"></i> Cancel</a>
                </div>

            </form>
        </div>
    </div>
</div>

<!-- Import Footer and Bottom navigation bar-->
<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>