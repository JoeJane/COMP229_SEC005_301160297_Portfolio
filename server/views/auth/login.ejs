<!--Import Header and Navigation bar-->
<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<main class="container">
    <!--Message area-->
    <% if (message.length > 0) {%>
        <div class="alert alert-danger">
            <%= message %>
        </div>
    <% } %>

    <!-- Content for login page -->
    <div class="row">
        <div class="offset-md-4 col-md-4 mt-5">
            <h1>Please Login</h1>
            <form method="POST" action="/login" class="row g-3" autocomplete="off">
                <fieldset class="col-md-12">
                    <label for="username" class="form-label">User Name</label>
                    <input type="text" class="form-control" name="username" id="username" placeholder="Enter username" required autofocus>
                </fieldset>
                <fieldset class="col-md-12">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" name="password" id="password" placeholder="Enter password" required>
                </fieldset>
                <fieldset class="col-md-12">
                    <input type="submit" class="btn btn-dark col-12" value="Login">
                </fieldset>
            </form>
        </div>
    </div>
</main>

<!-- Import Footer and Bottom navigation bar-->
<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>